<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
  <table>
    <thead>
      <tr>
        <th>DO IT ASAP</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <div class="media">
      <div class="media-content">  
      <%= link_to 'Sign In', new_user_registration_path %>
      <div>
    </div>
<% end %>
<br>
